# =============================================================================
# Docker PostgreSQL Configuration
# =============================================================================

# PostgreSQL Settings
POSTGRES_USER=nowplaying
POSTGRES_PASSWORD=nowplaying_dev_password
POSTGRES_DB=nowplaying
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Initialize schema on first run (true/false)
# Set to "true" to automatically apply schema.sql on first startup
# Set to "false" to manually apply schema later
INIT_SCHEMA=true

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@nowplaying.local
PGADMIN_PASSWORD=admin
