{
  "api": {
    "baseUrl": "http://localhost:5001",
    "sslVerify": false
  },
  "websocket": {
    "host": "0.0.0.0",
    "port": 5002,
    "path": "/events/media",
    "sslCertFile": "certs/localhost.crt",
    "sslKeyFile": "certs/localhost.key",
    "sslEnabled": false
  },
  "spotify": {
    "minPollIntervalSec": 2,
    "pollIntervalSec": 2,
    "requestTimeoutSec": 10,
    "retryIntervalSec": 2,
    "retryWindowSec": 20,
    "cooldownSec": 30,
    "tokenRefreshLeadTimeSec": 300,
    "tokenRefreshJitterSec": 30
  },
  "sonos": {
    "deviceDiscRetryIntervalSec": 2,
    "discoveryRetryWindowSec": 120,
    "discoveryCooldownSec": 30,
    "coordinatorRetrySec": 3,
    "minPollIntervalSec": 2,
    "pollIntervalSec": 3,
    "discoveryCacheTtlSec": 60,
    "resumeDiscoveryIntervalSec": 10,
    "idleStuckTimeoutSec": 10,
    "noDeviceRetryIntervalSec": 15
  },
  "server": {
    "timeoutGracefulShutdownSec": 1
  }
}
