{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": true
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "nowplaying",
    "user": "nowplaying",
    "poolMinConn": 2,
    "poolMaxConn": 10
  },
  "google": {
    "redirectUri": "https://media-display-new.projecttechcycle-dev.org:9081/auth/google/callback"
  },
  "spotify": {
    "redirectUri": "https://media-display-new.projecttechcycle-dev.org:9081/spotify/callback",
    "scope": "user-read-currently-playing user-read-playback-state user-read-email user-read-private"
  },
  "cors": {
    "origins": [
      "http://localhost:3000",
      "http://localhost:5000"
    ]
  },
  "jwt": {
    "algorithm": "HS256",
    "expirationHours": 24
  },
  "session": {
    "timeoutMinutes": 30
  },
  "rateLimit": {
    "spotifyApiCallsPerMinute": 100
  },
  "logging": {
    "level": "DEBUG",
    "format": "detailed"
  },
  "websocket": {
    "path": "/ws/socket.io",
    "asyncMode": "eventlet",
    "corsAllowedOrigins": "*"
  },
  "ssl": {
    "verify": true
  }
}
