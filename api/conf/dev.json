{
  "server": {
    "host": "0.0.0.0",
    "port": 5001,
    "debug": true
  },
  "frontend": {
    "baseUrl": "https://media-display-app.projecttechcycle.org:9082"
  },
  "assets": {
    "baseUrl": "https://media-display-app.projecttechcycle.org:9082/assets",
    "localPath": "api/assets"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "nowplaying",
    "user": "nowplaying",
    "poolMinConn": 2,
    "poolMaxConn": 10
  },
  "google": {
    "redirectUri": "https://media-display-app.projecttechcycle.org:9082/api/auth/google/callback",
    "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "tokenUrl": "https://oauth2.googleapis.com/token",
    "userInfoUrl": "https://www.googleapis.com/oauth2/v2/userinfo",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "spotify": {
    "api": {
      "main": {
        "baseUrl": "https://api.spotify.com/v1",
        "sslVerify": false
      },
      "account": {
        "baseUrl": "https://accounts.spotify.com",
        "sslVerify": false
      },
      "redirectUri": "https://media-display-app.projecttechcycle.org:9082/api/auth/spotify/callback",
      "scope": "user-read-currently-playing user-read-playback-state user-read-email user-read-private"
    }
  },
  "cors": {
    "origins": [
      "http://localhost:3000",
      "http://localhost:5001",
      "http://localhost:5173",
      "https://media-display-app.projecttechcycle.org:9082",
      "*"
    ]
  },
  "jwt": {
    "algorithm": "HS256",
    "expirationHours": 24
  },
  "session": {
    "timeoutMinutes": 30
  },
  "rateLimit": {
    "spotifyApiCallsPerMinute": 100
  },
  "logging": {
    "level": "DEBUG",
    "format": "detailed"
  },
  "websocket": {
    "path": "/ws/socket.io",
    "asyncMode": "eventlet",
    "corsAllowedOrigins": "*",
    "port": 5002
  },
  "ssl": {
    "verify": false
  }
}
