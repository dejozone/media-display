{
  "server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false
  },
  "frontend": {
    "baseUrl": "https://media-display-app.projecttechcycle.org"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "nowplaying",
    "user": "nowplaying",
    "poolMinConn": 5,
    "poolMaxConn": 20
  },
  "google": {
    "redirectUri": "https://media-display-app.projecttechcycle.org/api/auth/google/callback",
    "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "tokenUrl": "https://oauth2.googleapis.com/token",
    "userInfoUrl": "https://www.googleapis.com/oauth2/v2/userinfo",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "spotify": {
    "redirectUri": "https://media-display-app.projecttechcycle.org/api/auth/spotify/callback",
    "scope": "user-read-currently-playing user-read-playback-state user-read-email user-read-private",
    "sslVerify": true
  },
  "cors": {
    "origins": [
      "https://media-display-app.projecttechcycle.org"
    ]
  },
  "jwt": {
    "algorithm": "HS256",
    "expirationHours": 24
  },
  "session": {
    "timeoutMinutes": 60
  },
  "rateLimit": {
    "spotifyApiCallsPerMinute": 100
  },
  "logging": {
    "level": "INFO",
    "format": "detailed"
  },
  "websocket": {
    "path": "/ws/socket.io",
    "asyncMode": "eventlet",
    "corsAllowedOrigins": "https://media-display-app.projecttechcycle.org"
  },
  "ssl": {
    "verify": true
  }
}
